#!/bin/sh
#
# The partner script for group_q
#
# This script receives a group name as the first argument and runs condor_q,
# matching only jobs from this group.
#

#. /grid/fermiapp/products/common/etc/setups.sh
#setup jobsub_tools

# Name of the group to look for.
grp=$1

# Very ugly way to deal with the required quoting.
# Octal 047 is the single quote character.
echo ${grp} | awk '{print "/opt/condor/bin/condor_q -constraint \047AGroup==\"group_"$grp"\"\047"}' | sh
