schedd=""
case "x$*" in
*@*) schedd=`echo "$*" | sed -e 's/.*@//' -e 's/ .*//'`
     args=`echo "$*" | sed -e 's/@[^ ]*//'`
     ;;
esac
if [ x$schedd != x ]
then
    args="-name $schedd $args"
fi

source `ups setup ifdhc v2_5_15 -q python36, ifdhc_config v2_5_15 -q tokens`
export X509_USER_PROXY=`ifdh getProxy`
export BEARER_TOKEN_FILE=`ifdh getToken`

cmd=`basename $0 | sed -e 's;^[a-z]*_;/usr/bin/condor_;'`
exec $cmd -name $schedd $args

